---
import {
  Card,
  CardHeader,
  CardDescription,
} from "@/components/ui/card";
import { Image } from "astro:assets";

const { description, image, alt } = Astro.props;
---

<Card className="relative mx-auto w-full max-w-xl pt-0 gap-3 mb-6">
  <Image
    src={image}
    alt={alt}
    inferSize={true}
    class="w-full rounded-xl object-cover"
    width={1200}
  />
  <CardHeader className="flex-1 gap-0">
    <CardDescription>
      {description}
    </CardDescription>
  </CardHeader>
</Card>